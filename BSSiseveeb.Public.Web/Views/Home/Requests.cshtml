
@{
    ViewBag.Title = "Töömaterjalid";
}

<h2>Töömaterjalide taotlus</h2>
<div>
    <label for="title">Nõutud töövahendid: </label>
    <input id="title" class="form-control" name="title" size="40"/> <br/>
    <label for="info">Täpsustav info:</label>
    <textarea class="form-control" id="info" name="info" rows="5" Columns="40"></textarea><br/>
    <input type="submit" class="btn btn-submit" value="Saada" onClick="sendRequest()">
    <h4 id="status"></h4>
</div>

<div id="myRequests">
    <h3>My Requests:</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Request</th>
                <th>Info</th>
                <th>Timestamp</th>
                <th>Status</th>
                <th>Cancel</th>
            </tr>
        </thead>
        <tbody id="myRequestsBody"></tbody>
    </table>
</div>

@section scripts {
    @Scripts.Render(ScriptBundles.Requests)
}