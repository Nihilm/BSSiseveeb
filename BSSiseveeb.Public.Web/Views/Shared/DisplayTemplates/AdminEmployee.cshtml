@model BSSiseveeb.Core.Dto.EmployeeDto

<tr>
    <td>@Model.Name</td>

    @if (Model.Birthdate.HasValue)
    {
        <td>@Model.Birthdate.Value.ToString("dd MMM yyyy")</td>
    }
    else
    {
        <td></td>
    }
    <td>@Model.PhoneNumber</td>
    <td>@Model.Email</td>

    @if (Model.ContractStart.HasValue)
    {
        <td>@Model.ContractStart.Value.ToString("dd MMM yyyy")</td>
    }
    else
    {
        <td></td>
    }

    @if (Model.ContractEnd.HasValue)
    {
        <td>@Model.ContractEnd.Value.ToString("dd MMM yyyy")</td>
    }
    else
    {
        <td>Tähtajatu</td>
    }

    @if (Model.ContractStart.HasValue)
    {
        <td>@((DateTime.Now - Model.ContractStart).Value.Days) päeva</td>
    }
    else
    {
        <td></td>
    }

    <td>@Html.ActionLink("Edit", "ViewEmployee", "Admin", new { id = Model.Id }, new { @class = "btn btn-primary" })</td>
</tr>
